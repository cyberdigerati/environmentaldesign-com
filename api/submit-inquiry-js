// api/submit-inquiry.js
export default async function handler(req, res) {
  // Only allow POST requests
  if (req.method !== 'POST') {
    return res.status(405).json({ message: 'Method not allowed' });
  }

  try {
    const { name, email, company, message } = req.body;

    // Validate required fields
    if (!name || !email || !message) {
      return res.status(400).json({ message: 'Missing required fields' });
    }

    // Get access key from environment variable
    const accessKey = process.env.WEB3FORMS_ACCESS_KEY;

    if (!accessKey) {
      return res.status(500).json({ message: 'Server configuration error' });
    }

    // Create the payload for Web3Forms
    const formData = {
      access_key: accessKey,
      name,
      email,
      company,
      message,
      subject: `Domain Inquiry: EnvironmentalDesign.com - $2,500,000`,
      from_name: 'EnvironmentalDesign.com Form',
      to_email: 'environmentaldesign.com@proton.me',
    };

    // Submit to Web3Forms API
    const response = await fetch('https://api.web3forms.com/submit', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        Accept: 'application/json',
      },
      body: JSON.stringify(formData),
    });

    const data = await response.json();

    if (response.ok) {
      return res.status(200).json({ success: true });
    } else {
      return res
        .status(400)
        .json({ message: data.message || 'Form submission failed' });
    }
  } catch (error) {
    console.error('Form submission error:', error);
    return res.status(500).json({ message: 'Internal server error' });
  }
}
